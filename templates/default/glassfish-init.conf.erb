#!/bin/sh
# /etc/init.d/glassfish
#
 
### BEGIN INIT INFO
# Provides:          glassfish
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start glassfish at boot time
# Description:       Enable glassfish.
### END INIT INFO

case "$1" in
  start)
        <%= node['glassfish']['base_dir'] %>/bin/asadmin start-domain #{@resource.domain_name}
    ;;
  stop)
        <%= node['glassfish']['base_dir'] %>/bin/asadmin stop-domain #{@resource.domain_name}
    ;;
  restart)
        <%= node['glassfish']['base_dir'] %>/bin/asadmin stop-domain #{@resource.domain_name}
        <%= node['glassfish']['base_dir'] %>/bin/asadmin start-domain #{@resource.domain_name}
    ;;
  *)
    echo "Usage: /etc/init.d/glassfish {start|stop|restart}"
    exit 1
    ;;
esac
 
exit 0
